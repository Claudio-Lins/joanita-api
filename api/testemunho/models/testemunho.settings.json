{
  "kind": "collectionType",
  "collectionName": "testemunhos",
  "info": {
    "name": "Testemunho"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "nome": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "nome"
    },
    "email": {
      "type": "email"
    },
    "mensagem": {
      "type": "text"
    },
    "picture": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
